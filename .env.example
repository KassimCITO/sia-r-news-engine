# === OPENAI CONFIGURATION ===
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# === JWT CONFIGURATION ===
JWT_SECRET=your-super-secret-jwt-key-change-me
JWT_ACCESS_TOKEN_EXPIRES=3600

# === API KEY CONFIGURATION ===
API_KEY_MASTER=master-api-key-change-me

# === WORDPRESS CONFIGURATION ===
WP_BASE_URL=https://eldiademichoacan.com
WP_USERNAME=wordpress-username
WP_PASSWORD=wordpress-password

# === DATABASE CONFIGURATION ===
DB_URL=sqlite:///./sia_r.db
SQLALCHEMY_ECHO=False

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO

# === APPLICATION CONFIGURATION ===
FLASK_ENV=development
HOST=0.0.0.0
PORT=8000

# === ADDITIONAL FEATURES ===
ENABLE_PDF_GENERATION=True
AUTO_PUBLISH_ENABLED=False
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# ============================================================================
# TRENDS INTEGRATION - GOOGLE TRENDS
# ============================================================================
# Google Trends via pytrends
# âœ… NO API KEY REQUIRED - but can be rate-limited by Google
GOOGLE_TRENDS_ENABLED=True

# ============================================================================
# TRENDS INTEGRATION - TWITTER/X API v2
# ============================================================================
# Twitter/X API requires:
# 1. Visit https://developer.twitter.com/en/portal/dashboard
# 2. Create an app or use existing one
# 3. Generate API credentials with "Read and Write" permissions
# 4. Enable "OAuth 2.0" in your app settings
# 5. Get Bearer Token from "Keys and tokens" section
#
TWITTER_API_ENABLED=False
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# ============================================================================
# TRENDS INTEGRATION - NEWS API
# ============================================================================
# NewsAPI.org - Real-time news aggregation
# Steps to configure:
# 1. Visit https://newsapi.org/register
# 2. Sign up for free account
# 3. Get your API key from https://newsapi.org/account
# 4. Free tier: 100 requests/day
#
NEWS_API_ENABLED=False
NEWS_API_KEY=your-newsapi-key
NEWS_API_COUNTRY=mx
NEWS_API_CATEGORY=general

# ============================================================================
# TRENDS INTEGRATION - RSS FEEDS
# ============================================================================
# RSS Feed aggregation - NO API KEY REQUIRED
# Comma-separated list of RSS feed URLs
#
RSS_FEEDS_ENABLED=True
RSS_FEED_URLS=https://feeds.elpais.com/mrss-s/pages/ep/site/elpais.com/portada,https://www.bbc.com/mundo/feed.xml,https://feeds.bloomberg.com/markets/news.rss

# ============================================================================
# TRENDS INTEGRATION - SERPAPI (Google Search Results)
# ============================================================================
# SerpAPI - Scrape Google Search Results
# Steps to configure:
# 1. Visit https://serpapi.com/
# 2. Sign up for free account (100 searches/month free)
# 3. Get your API key from https://serpapi.com/dashboard
#
SERPAPI_ENABLED=False
SERPAPI_API_KEY=your-serpapi-api-key

# ============================================================================
# TRENDS CACHING
# ============================================================================
TRENDS_CACHE_TTL=3600
TRENDS_MAX_RESULTS=20
